<div class="row">
  <div class="col-lg-12 mb-3">
    <h1 class="header-option pub-header">
      全国の投稿一覧
    </h1>
    <p class="header-annotation pub-header">
      　全<%= @posts.count %>件
    </p>
  </div>
</div>

<div class="row mx-auto mt-3">
  <div class="col-lg-12">
    <% if @posts.count == 0 %>
      <p class="text-15rem">
        投稿はありません。
      </p>
    <% else %>
      <div class="row">
        <%= render partial: "public/partials/post", collection: @posts %>
      </div>
    <% end %>
  </div>

  <div class="mt-5">
    <%= paginate @posts, window: 1 %>
  </div>
</div>