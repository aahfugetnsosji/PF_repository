<div class="row">
  <div class="col-md-12">
    <h1 class="header-option pub-header">
      検索結果
      <% if @posts.count >= 1 %>
        <span class="header-annotation">
          <%= @posts.count %>件がヒット
        </span>
      <% end %>
    </h1>
  </div>
</div>

<div class="row mx-auto mt-3">
  <div class="col-md-12">
    <% if @posts.count == 0 %>
      <div class"row">
        <p class="text-15rem">
          検索結果がありませんでした。
        </p>
      </div>
    <% else %>
      <div class="row">
        <%= render partial: "public/partials/post", collection: @posts %>
      </div>
    <% end %>
  </div>

  <div class="mt-5">
    <%= paginate @posts, window: 1 %>
  </div>
</div>