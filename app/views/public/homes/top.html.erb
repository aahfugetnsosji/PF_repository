<div class="row">
  <div class="col-md-12 mb-5">
    <h1 class="header-option pub-header">裏怪道分布図</h1>
  </div>
</div>

<div class="row mb-4 comment-border">
  <div class="col-md-9 mx-auto">
    <!--Jmap表示-->
    <div class="mb-5" id="jmap"></div>
    </div>
  </div>
</div>

<div class="row px-5">
    <!--キーワード検索窓-->
    <%= render partial: 'public/partials/search_keyword' %>
    <!--タグ検索窓-->
    <%= render partial: 'public/partials/search_tag', locals: { tag: @tags} %>
    <!--地方区分検索窓-->
    <%= render partial: 'public/partials/search_region', locals: { region: @regions} %>
    <!--都道府県検索窓-->
    <%= render partial: 'public/partials/search_prefecture', locals: { prefecture: @prefectures} %>
  </div>

<div class="row mt-5 px-5">
  <div class="col-md-12">
    <h2 class="header-option pub-header">全国の新着投稿</h2>
  </div>
</div>

<div class="option-right mt-3 mb-4 px-5">
  <%= link_to "投稿をもっと見る", posts_path, class: "btn btn-option" %>
</div>


<div class="row px-5 pb-5">
  <div class="col-md-12">
    <% if @latest_posts.count == 0 %>
      <p class="text-normal">
        投稿はありません。
      </p>
    <% else %>
      <div class="row px-5">
        <% @latest_posts.each do |post| %>
          <div class="col-md-4">
            <div class="card card-option flex-lg-row mb-4 h-md-300">
              <a href="/posts/<%= post.id %>" class="card-img-left flex-auto d-none d-lg-block index-img-resize">
                <%= image_tag post.get_image %>
              </a>

              <div class="card-body d-flex flex-column align-items-start">
                <a href="/posts/<%= post.id %>" class="index-link-option">
                  <h5 class="pub-header mb-0">
                    <%= post.title %>
                  </h5>
                </a>

                <div class="mb-0 text-omit">
                  <a href="/users/<%= post.user_id %>" class="index-name-link-option">
                    <%= image_tag post.user.get_profile_image(14, 14) %>
                    <%= post.user.name %>
                  </a>
                </div>

                <div class="card-text mb-auto">
                  <i class="fa-sharp fa-solid fa-tags"></i>
                  <% post.post_tags.each do |pt| %>
                    <span class="mb-0 basic-font">
                      <%= pt.tag.name %>
                    </span>
                  <% end %>
                </div>

                <div class="card-text mb-auto">
                  <i class="fa-sharp fa-solid fa-map"></i>
                  <span class="mb-0 basic-font">
                    <%= post.region.region_name %>
                  </span>
                </div>

                <div class="card-text mb-auto">
                  <i class="fa-sharp fa-solid fa-map-location-dot"></i>
                  <% post.post_prefectures.each do |pp| %>
                    <span class="mr-2 mb-0 basic-font">
                      <%= pp.prefecture.prefecture_name %>
                    </span>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
