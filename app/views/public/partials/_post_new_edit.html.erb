<%= form_with model: post, local: true do |f| %>
  <h5 class="header-option pub-header mb-3">投稿画像</h5>
  <%= f.file_field :image, accept: "image/*", class: "form-control input-file-form" %>

  <h5 class="header-option pub-header mt-4 mb-3">
    タイトル
    <span class="text-annotation">※必須</span>
  </h5>
  <%= f.text_field :title, placeholder: "タイトルを入力", class: "form-control input-form" %>

  <h5 class="header-option pub-header mt-4 mb-3">
    本文
    <span class="text-annotation">※必須</span>
  </h5>
  <%= f.text_area :body, placeholder: "本文を入力", class: "form-control input-form", id: "textarea" %>

  <h5 class="header-option pub-header mt-4 mb-3">タグを選択</h5>
  <%= f.collection_select(:tag_ids, Tag.all, :id, :name, {prompt: "選択してください"}, {class: "select form-control input-form", multiple: true}) %>

  <h5 class="header-option pub-header mt-4 mb-3">
    地方区分を選択
    <span class="text-annotation">※必須</span>
  </h5>
  <%= f.collection_select(:region_id, Region.all, :id, :region_name, {prompt: "選択してください"}, {class: "select form-control input-form"}) %>

  <h5 class="header-option pub-header mt-4 mb-3">都道府県を選択</h5>
    <%= f.collection_select(:prefecture_ids, Prefecture.all, :id, :prefecture_name, {prompt: "選択してください"}, {class: "select form-control input-form", multiple: true}) %>

  <div class="text-center mt-5">
    <% if f.object.new_record? %>
      <%= f.submit "投稿する", class: "btn btn-option mb-5" %>
    <% else %>
      <%= f.submit "更新する", class: "btn btn-option mb-5" %>
    <% end %>
  </div>
<% end %>