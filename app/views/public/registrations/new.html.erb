<div class="row">
  <div class="col-lg-12 mb-3">
    <h3 class="header-option pub-header">新規会員登録</h3>
  </div>
</div>

<div class="row">
  <div class="login-option">
    <p class="mb-5 text-12rem text-center">こちらから新規登録</p>

    <!--バリデーションエラーメッセージ表示-->
    <%= render "public/shared/error_messages", resource: resource %>

    <%= form_with model: @user, url: user_registration_path do |f| %>
      <div class="option-center">
        <%= f.text_field :name, autofocus: true, placeholder: "ユーザーネーム", class: "input-form" %>
        <%= f.email_field :email, autocomplete: "email", placeholder: "メールアドレス", class: "input-form" %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード(6文字以上)", class: "input-form" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード(確認用)", class: "input-form" %>
        <%= f.submit "登録する", class: "btn btn-option mt-4" %>
      </div>
    <% end %>
  </div>
</div>

<div class="row mt-3">
  <div class="col-lg-10 mx-auto">
    <h4 class="header-option pub-header">会員登録済みの方</h4>
    <p class="basic-font">
      <%= link_to "こちら", new_session_path(resource_name), class: "link-option" %>
      からログインしてください。
    </p>
  </div>
</div>