<div class="row">
  <div class="col-lg-9 mx-auto mb-3">
    <h2 class="header-option pub-header">プロフィール編集</h2>
  </div>
</div>

<div class="row mt-3">
  <div class="col-lg-6 mx-auto">
    <!--バリデーションエラーメッセージ表示-->
    <%= render "public/shared/error_messages", model: @user %>

    <%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>
      <h5 class="header-option pub-header ">アイコン画像</h5>
      <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*", class: "form-control input-file-form mt-3" %>

      <h5 class="header-option pub-header mt-4">ユーザーネーム</h5>
      <%= f.text_field :name, class: "form-control input-form mt-3" %>

      <h5 class="header-option pub-header mt-4">メールアドレス</h5>
      <%= f.text_field :email, class: "form-control input-form mt-3" %>

      <h5 class="header-option pub-header mt-4">プロフィール</h5>
      <%= f.text_area :profile, class: "form-control input-form mt-3", id: "textarea" %>

      <div class="text-center mt-4">
        <%= f.submit "変更を保存", class: "btn btn-option mt-3" %>
      </div>
    <% end %>
  </div>
</div>

<div class="option-right my-5">
  <%= link_to "退会する", unsubscribe_path, class: "btn danger-btn" %>
</div>