<div class="row mb-5">
  <div class="col-md-12">
    <h1 class="header-option adm-header">投稿一覧</h1>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mx-auto">
    <table class="table text-center">
      <thead>
        <tr>
          <th style="width: 15%">投稿ID</th>
          <th style="width: 20%">投稿日時</th>
          <th style="width: 30%">タイトル</th>
          <th style="width: 30%">投稿者</th>
        </tr>
      </thead>

      <% @posts.each do |post| %>
      <tbody>
        <tr>
          <td>
            <%= post.id %>
          </td>
          <td>
            <%= l post.created_at %>
          </td>
          <td>
            <%= link_to post.title, admin_post_path(post.id), class: "link-option" %>
          </td>
          <td>
            <%= post.user.name %>
          </td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>

  <div class="mt-5">
    <%= paginate @posts %>
  </div>
</div>