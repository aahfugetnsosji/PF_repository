<div class="row mb-5">
  <div class="col-md-12">
    <h1 class="header-option adm-header">会員一覧</h1>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mx-auto">
    <table class="table ellipsis">
      <thead class="text-center">
        <tr>
          <th style="width: 15%">会員ID</th>
          <th style="width: 20%">登録日時</th>
          <th style="width: 20%">会員登録名</th>
          <th style="width: 40%">メールアドレス</th>
        </tr>
      </thead>

      <% @users.each do |user| %>
      <tbody>
        <tr>
          <td class="text-center">
            <%= user.id %>
          </td>
          <td class="text-center">
            <%= l user.created_at %>
          </td>
          <td>
            <%= link_to user.name, admin_user_path(user.id), class: "link-option" %>
          </td>
          <td>
            <%= user.email %>
          </td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>

  <div class="mt-5">
    <%= paginate @users %>
  </div>
</div>